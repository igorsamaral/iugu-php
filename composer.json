{
    "name": "igorsamaral/iugu-php",
    "description": "Iugu PHP Library",
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "keywords": [
        "iugu.com.br",
        "iugu",
        "pagamentos",
        "payments brazil",
        "pagamento brasil",
        "api"
      ],
    "authors": [
        {
            "name": "Igor Santana",
            "email": "igr.amaral@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Iugu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IuguTests\\": "tests/"
        }
    }
}
